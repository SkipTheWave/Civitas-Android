<resources>
    <!-- Base application theme. -->
    <style name="Theme.Civitas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_bg</item>
        <item name="colorSecondaryVariant">@color/orange_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Theme.Civitas.NoActionBar</item>
    </style>

    <style name="Theme.Civitas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MeriendaOne">
        <item name="android:fontFamily">@font/merienda_one_regular</item>
    </style>

    <style name="Theme.Civitas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.Civitas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>